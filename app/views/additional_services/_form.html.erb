<%= form_with(model: additional_service) do |form| %>
  <% if additional_service.errors.any? %>
    <div style="color: red">
      <p><%= @additional_service.errors.full_messages.join(", ") %></p>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <p>
      <%= form.label :price, style: "display: block" %>
      <%= form.number_field :price, step: 0.01 %>
    </p>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

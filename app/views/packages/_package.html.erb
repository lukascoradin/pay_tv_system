<div>
  <h2><%= package.name %></h2>
  <p><strong>Plan:</strong> <%= package.plan.name %></p>

  <% if package.additional_services.any? %>
    <p><strong>Additional services:</strong></p>
    <ul>
      <% package.additional_services.each do |service| %>
        <li><%= service.name %></li>
      <% end %>
    </ul>
  <% end %>

  <p>
    <strong>Price:</strong>
    <%= number_to_currency(package.price, unit: "R$ ", separator: ",", delimiter: ".") %>
  </p>

</div>
